{
  "name": "share-trading-ui-mvp",
  "version": "0.1.0",
  "private": true,
  "scripts": {
    "dev": "next dev",
    "dev:backend": "cd backend && npm run dev",
    "dev:full": "concurrently \"npm run dev:backend\" \"npm run dev\" --names \"backend,frontend\" --prefix-colors \"blue,green\"",
    "build": "next build",
    "build:backend": "cd backend && npm run build",
    "build:full": "npm run build:backend && npm run build",
    "start": "next start",
    "start:backend": "cd backend && npm start",
    "start:full": "concurrently \"npm run start:backend\" \"npm run start\" --names \"backend,frontend\" --prefix-colors \"blue,green\"",
    "lint": "next lint",
    "lint:backend": "cd backend && npm run lint",
    "lint:full": "npm run lint && npm run lint:backend",
    "type-check": "tsc --noEmit",
    "test": "jest",
    "test:watch": "jest --watch",
    "test:backend": "cd backend && npm test",
    "test:full": "npm run test && npm run test:backend"
  },
  "dependencies": {
    "@heroicons/react": "^2.2.0",
    "@monaco-editor/react": "^4.6.0",
    "@tanstack/react-query": "^5.0.0",
    "clsx": "^2.1.0",
    "framer-motion": "^11.0.0",
    "lucide-react": "^0.400.0",
    "next": "^14.2.0",
    "node-fetch": "^2.7.0",
    "react": "^18.3.0",
    "react-countup": "^6.5.3",
    "react-dom": "^18.3.0",
    "react-intersection-observer": "^10.0.0",
    "react-phone-number-input": "^3.4.13",
    "react-select": "^5.10.2",
    "recharts": "^2.12.0",
    "sonner": "^2.0.7",
    "tailwind-merge": "^2.2.0",
    "world-countries": "^5.1.0",
    "zustand": "^4.5.0"
  },
  "devDependencies": {
    "@testing-library/jest-dom": "^6.9.1",
    "@testing-library/react": "^16.3.0",
    "@testing-library/user-event": "^14.6.1",
    "@types/jest": "^30.0.0",
    "@types/node": "^20.0.0",
    "@types/react": "^18.3.0",
    "@types/react-dom": "^18.3.0",
    "@typescript-eslint/eslint-plugin": "^7.0.0",
    "@typescript-eslint/parser": "^7.0.0",
    "autoprefixer": "^10.4.0",
    "concurrently": "^9.2.1",
    "eslint": "^8.57.0",
    "eslint-config-next": "^14.2.0",
    "jest": "^30.2.0",
    "jest-environment-jsdom": "^30.2.0",
    "postcss": "^8.4.0",
    "tailwindcss": "^3.4.0",
    "typescript": "^5.4.0"
  }
}
